<UserControl x:Class="PersonaEditor.Controls.Primitives.EditableTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PersonaEditor.Controls.Primitives"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" IsEnabledChanged="UserControl_IsEnabledChanged">

    <Grid x:Name="Main" x:FieldModifier="private">
        <TextBlock x:Name="TBlock" x:FieldModifier="private" Text="{Binding Text}"/>
        <TextBox x:Name="TBox" x:FieldModifier="private" Text="{Binding Text}" Visibility="Collapsed"/>
    </Grid>
</UserControl>
